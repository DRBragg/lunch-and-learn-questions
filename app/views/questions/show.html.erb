<% provide(:title) do %>
  Question #<%= @question.id %>
<% end %>

<p class="lead"><%= @question.question %></p>
<p class="text-muted">
  Asked: <%= @question.created_at.strftime('%D at %I:%M %p') %>
</p>

<p>
  <%= link_to edit_question_path(@question), class: "btn btn-primary" do %>
    <%= fa_icon("edit", text: "Edit") %>
  <% end %>
  <%= link_to @question, class: "btn btn-xs btn-danger", method: :delete, data: {  confirm: "Are you sure you want to delete this question?" } do %>
    <%= fa_icon("trash-o", text: "Delete") %>
  <% end %>
  <%= link_to "Back", questions_path, class: "btn btn-link" %>
</p>
